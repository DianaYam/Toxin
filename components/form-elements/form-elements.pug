
include ../text-field/text-field
include ../dropdown/dropdown
include ../masked-text-field/masked-text-field
include ../date-dropdown/date-dropdown
include ../filter-date-dropdown/filter-date-dropdown
include ../subscription-text-field/subscription-text-field
include ../checkbox-list/checkbox-list
include ../radio/radio
include ../toggle/toggle
include ../like-button/like-button
include ../rate-button/rate-button
include ../range-slider/range-slider
include ../button/button
include ../arrow-button/arrow-button
include ../pagination/pagination
include ../exp-checkbox-list/exp-checkbox-list
include ../rich-checkbox-list/rich-checkbox-list
include ../bullet-list/bullet-list
include ../point/point
include ../comment/comment

mixin formElements()
    .form-elements
        .form-elements__group.form-elements-group
            .form-elements__column.form-elements-column
                + text-field({
                    header: 'Text field',
                    type: 'email',
                    placeholder: 'Email',
                    required: true,
                    name: 'name',
                    maxlength: 15
                })(class='form-elements__item')

                + text-field({
                    header: 'Text field',
                    type: 'email',
                    placeholder: 'Email',
                    required: true,
                    name: 'name',
                    maxlength: 15
                })(class='form-elements__item')

                + dropdown({
                    type: TYPE_GUESTS,
                    header: 'Dropdown'
                })(class='form-elements__item form-elements__dropdown')

                + masked-text-field({
                    header: 'Masked text field',
                    maskType: TYPE_DATE,
                    required: true,
                    name: 'birth-date'
                })(class='form-elements__item form-elements__masked-field')

                + date-dropdown(class='form-elements__item form-elements__date-dropdown')

                + filter-date-dropdown({
                    header: 'Filter Date Dropdown'
                })(class='form-elements__item form-elements__filter-date-dropdown')

                + subscription-text-field({
                    required: true,
                    name: 'name',
                    header: 'Subscription text field'
                })(class='form-elements__item form-elements__subscription-text-field')

            .form-elements__column.form-elements-column
                + checkbox-list({
                    header: 'Checkbox buttons',
                    options: [
                        {
                            text: 'Можно курить',
                            name: 'smoke'
                        },
                        {
                            text: 'Можно с питомцами',
                            name: 'pets',
                            checked: true
                        },
                        {
                            text: 'Можно пригласить гостей (до 10 человек)',
                            name: 'guests',
                            checked: true
                        }
                    ]
                })(class='form-elements__item form-elements__checkbox-list')

                .form-elements__radios.form-elements-radios.form-elements__item
                    h3.form-elements-radios__header Radio buttons
                    + radio({
                        text: 'Мужчина',
                        value: 'man',
                        name: 'gender',
                        checked: true
                    })(class='form-elements-radios__item')
                    + radio({
                        text: 'Женщина',
                        value: 'woman',
                        name: 'gender'
                    })(class='form-elements-radios__item')

                .form-elements__toggles.form-elements-toggles.form-elements__item
                    h3.form-elements-toggles__header='Toggle'
                    + toggle({
                        text: 'Получать спецпредложения',
                        name: 'special-offers-1',
                        checked: true
                    })(class='form-elements-toggles__item')
                    + toggle({
                        text: 'Получать спецпредложения',
                        name: 'special-offers-2'
                    })(class='form-elements-toggles__item')

                .form-elements__likes.form-elements-likes.form-elements__item
                    h3.form-elements-likes__header Like button
                    + like-button({
                        liked: false,
                        number: '2',
                        name: 'denis-likes'
                    })(class='form-elements-likes__item')
                    + like-button({
                        liked: true,
                        number: '12',
                        name: 'angela-likes'
                    })(class='form-elements-likes__item')

                .form-elements__rates.form-elements-rates.form-elements__item
                    h3.form-elements-rates__header='Rate button'
                    + rate-button({
                        rating: 4,
                        changeable: 'true'
                    })(class='form-elements-rates__item')
                    + rate-button({
                        rating: 5,
                        changeable: 'true'
                    })(class='form-elements-rates__item')

            .form-elements__column.form-elements-column
                + range-slider({
                    header: 'Range slider',
                    min: 0,
                    max: 15700,
                    firstValue: 5000,
                    lastValue: 10000,
                    step: 1
                })(class='form-elements__range')

                .form-elements__buttons.form-elements-buttons.form-elements__item
                    h3.form-elements-buttons__header='Buttons'
                    + button({
                        appearance: TYPE_BACKGROUND,
                        text: 'Click me'
                    })(class='form-elements-buttons__item')
                    + button({
                        appearance: TYPE_BACKGROUND,
                        text: 'Click me'
                    })(class='form-elements-buttons__item')
                    br
                    + button({
                        appearance: TYPE_BORDER,
                        text: 'Click me'
                    })(class='form-elements-buttons__item buttons__border-item')
                    + button({
                        appearance: TYPE_BORDER,
                        text: 'Click me'
                    })(class='form-elements-buttons__item buttons__border-item')
                    br
                    + button({
                        appearance: TYPE_PURPLE_TEXT,
                        text: 'Click me'
                    })(class='form-elements-buttons__item buttons__text-item')
                    + button({
                        appearance: TYPE_GREY_TEXT,
                        text: 'Click me'
                    })(class='form-elements-buttons__item buttons__text-item')

                + arrow-button({
                    text: 'Перейти к оплате'
                })(class='form-elements__arrow-button')

                .form-elements__pagination.form-elements-pagination.form-elements__item
                    h3.form-elements-pagination__header='Pagination'
                    //- кажется, что caption не отцентрирован, так как нет стрелки слева. Она пропадает, когда активен элемент под номером 1
                    + pagination({
                        active: 1,
                        max: 15,
                        variantsOnPage: 12,
                        allVariants: 174
                    })(class='form-elements-pagination__block')

        .form-elements__group.form-elements-group.form-elements__dropdowns.form-elements-dropdowns
            .form-elements__column.form-elements-column
                + dropdown({
                    type: TYPE_PREFERENCES,
                    header: 'Dropdown'
                })(class='form-elements-dropdowns__item form-elements-dropdown form-elements-dropdown_config')
                + dropdown({
                    type: TYPE_PREFERENCES,
                    header: 'Dropdown'
                })(class='form-elements-dropdowns__item form-elements-dropdown form-elements-dropdown_config')
            .form-elements__column.form-elements-column
                + dropdown({
                    type: TYPE_GUESTS,
                    header: 'Dropdown'
                })(class='form-elements-dropdowns__item form-elements-dropdown form-elements-dropdown_guests')
            .form-elements__column.form-elements-column
                + dropdown({
                    type: TYPE_GUESTS,
                    header: 'Dropdown'
                })(class='form-elements-dropdowns__item form-elements-dropdown form-elements-dropdown_guests')

        .form-elements__group.form-elements-group
            .form-elements__column.form-elements-column
                + exp-checkbox-list({
                    header: 'Expandable checkbox list',
                    options: [
                        {
                            text: 'Завтрак',
                            name: 'breakfast'
                        },
                        {
                            text: 'Письменный стол',
                            name: 'desk'
                        },
                        {
                            text: 'Стул для кормления',
                            name: 'feeding-chair'
                        },
                        {
                            text: 'Кроватка',
                            name: 'Crib'
                        },
                        {
                            text: 'Телевизор',
                            name: 'tv'
                        },
                        {
                            text: 'Шампунь',
                            name: 'shampoo'
                        },
                        {
                            text: 'Телевизор',
                            name: 'tv2'
                        },
                        {
                            text: 'Шампунь',
                            name: 'shampoo2'
                        }
                    ]
                })(class='form-elements__exp-checkbox-list')

                + exp-checkbox-list({
                    header: 'Expandable checkbox list',
                    options: [
                        {
                            text: 'Завтрак',
                            name: 'breakfast'
                        },
                        {
                            text: 'Письменный стол',
                            name: 'desk'
                        },
                        {
                            text: 'Стул для кормления',
                            name: 'feeding-chair'
                        },
                        {
                            text: 'Кроватка',
                            name: 'Crib'
                        },
                        {
                            text: 'Телевизор',
                            name: 'tv'
                        },
                        {
                            text: 'Шампунь',
                            name: 'shampoo'
                        },
                        {
                            text: 'Телевизор',
                            name: 'tv2'
                        },
                        {
                            text: 'Шампунь',
                            name: 'shampoo2'
                        }
                    ]
                })(class='form-elements__exp-checkbox-list')
            .form-elements__column.form-elements-column
                + rich-checkbox-list({
                    header: 'Rich checkbox buttons',
                    options: [
                        {
                            name: 'wide-corridor',
                            header: 'Широкий коридор',
                            text: 'Ширина коридоров в номере не менее 91 см.'
                        },
                        {
                            name: 'assistant-for-disabled',
                            header: 'Помощник для инвалидов',
                            text: 'На 1 этаже вас встретит специалист и проводит до номера'
                        }
                    ]
                })(class='form-elements__rich-checkbox-list')
            .form-elements__column.form-elements-column
                + bullet-list({
                    header: 'Bullet list',
                    options: [
                        'Нельзя с питомцами',
                        'Без вечеринок и мероприятий',
                        'Время прибытия — после 13:00, а выезд до 12:00'
                    ]
                })(class='form-elements__bullet-list')

        .form-elements__group.form-elements-group
            .form-elements__column.form-elements-column
                + point({
                    icon: 'tag_faces',
                    header: 'Комфорт',
                    text: 'Шумопоглощающие стены'
                })(class='form-elements__point')
                + point({
                    icon: 'location_city',
                    header: 'Удобство',
                    text: 'Окно в каждой из спален'
                })(class='form-elements__point')
            .form-elements__column.form-elements-column.comment-wrapper
                + comment({
                    name: 'Мурад Сарафанов',
                    photo: '../../img/man.jpg',
                    date: '5 дней назад',
                    like: {
                        liked: true,
                        number: 12,
                        name: 'post-1352-likes'
                    },
                    text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
                })(class='form-elements__comment')
