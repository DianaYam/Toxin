
include ../booking-card/booking-card
include ../room-search-card/room-search-card
include ../register-card/register-card
include ../enter-card/enter-card
include ../calendar/calendar
include ../room-card/room-card

mixin cards(args)
    .cards
        .cards__content
            .cards__column
                + room-search-card(class='cards__search cards__item')
                + register-card(class='cards__register cards__item')
            .cards__column
                + booking-card({
                    roomNumber: 888,
                    category: LUXE,
                    price: 9990,
                    serviceCharge: 2179,
                    serviceChargeDiscount: 2179,
                    additionalServiceCharge: 300
                })(class='cards__booking cards__item')
                + enter-card(class='cards__enter cards__item')
            .cards__column
                + calendar({
                    placeholder: 'ДД.ММ.ГГГГ',
                    inline: true
                })(class='cards__calendar cards__item')
                + room-card({
                    photos: [
                        {
                            src: '../../img/room-1-1.jpg',
                            altText: 'bedroom'
                        },
                        {
                            src: '../../img/room-1-2.jpg',
                            altText: 'bedroom'
                        },
                        {
                            src: '../../img/room-1-3.jpg',
                            altText: 'bedroom'
                        },
                        {
                            src: '../../img/room-1-4.jpg',
                            altText: 'bedroom'
                        }
                    ],
                    roomNumber: 888,
                    category: LUXE,
                    price: 9990,
                    rating: 5,
                    reviewsNumber: 145
                })(class='cards__room cards__item')
                + room-card({
                    photos: [
                        {
                            src: '../../img/room-1-1.jpg',
                            altText: 'bedroom'
                        },
                        {
                            src: '../../img/room-1-2.jpg',
                            altText: 'bedroom'
                        },
                        {
                            src: '../../img/room-1-3.jpg',
                            altText: 'bedroom'
                        },
                        {
                            src: '../../img/room-1-4.jpg',
                            altText: 'bedroom'
                        }
                    ],
                    roomNumber: 840,
                    price: 9900,
                    rating: 4,
                    reviewsNumber: 65
                })(class='cards__room cards__item')