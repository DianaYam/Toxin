
extends ../page-template

block title
    |Comments

block styles
    link(rel="stylesheet" href="css/style.css" type="text/css")

block content

    include ../../components/arrow-button/arrow-button
    + arrow-button({
        text: 'Перейти к оплате'
    })(id='pay-button' class='btn-additional')

    include ../../components/booking-card/booking-card
    + booking-card({
        roomNumber: 888,
        category: LUXE,
        price: 9990,
        serviceCharge: 2179,
        serviceChargeDiscount: 2179,
        additionalServiceCharge: 300
    })

    include ../../components/bullet-list/bullet-list
    + bullet-list({
        header: 'Bullet list',
        options: [
            'Нельзя с питомцами',
            'Без вечеринок и мероприятий',
            'Время прибытия — после 13:00, а выезд до 12:00'
        ]
    })(class='bullet-add')

    include ../../components/button/button
    + button({
        appearance: TYPE_BACKGROUND,
        text: 'Click me'
    })(class='btn-add')
    + button({
        appearance: TYPE_BACKGROUND,
        text: 'Click me'
    })(class='btn-add')
    + button({
        appearance: TYPE_BORDER,
        text: 'Click me'
    })(class='btn-add')
    + button({
        appearance: TYPE_BORDER,
        text: 'Click me'
    })(class='btn-add')
    + button({
        appearance: TYPE_PURPLE_TEXT,
        text: 'Click me'
    })(class='btn-add')
    + button({
        appearance: TYPE_GREY_TEXT,
        text: 'Click me'
    })(class='btn-add')
    + button({
        appearance: TYPE_BORDER,
        text: 'Login',
        padding: '7px 18px 8px 17px'
    })(class='header__button')
    + button({
        appearance: TYPE_BACKGROUND,
        text: 'Register',
        padding: '7px 18px 8px 19px'
    })(class='header__button')

    include ../../components/calendar/calendar
    + calendar({
        placeholder: 'ДД.ММ.ГГГГ',
        inline: true
    })

    include ../../components/checkbox/checkbox
    + checkbox({
        text: 'Можно курить',
        name: 'smoke',
        checked: true
    })(class='new-checkbox')

    include ../../components/checkbox-list/checkbox-list
    + checkbox-list({
        header: 'Checkbox buttons',
        options: [
            {
                text: 'Можно курить',
                name: 'smoke'
            },
            {
                text: 'Можно с питомцами',
                name: 'pets'
            },
            {
                text: 'Можно пригласить гостей (до 10 человек)',
                name: 'guests'
            }
        ]
    })(class='ch-list-alt')

    include ../../components/comment/comment
    + comment({
        name: 'Мурад Сарафанов',
        photo: '../../img/man.jpg',
        date: '5 дней назад',
        like: {
            liked: true,
            number: 12
        },
        text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
    })(class='comment-alt')

    include ../../components/creative-footer/creative-footer
    + creative-footer(class='cr-alt')

    include ../../components/date-dropdown/date-dropdown
    + date-dropdown(class='ddr-alt')

    include ../../components/dropdown/dropdown
    + dropdown({
        type: TYPE_GUESTS,
        header: 'Dropdown'
    })
    + dropdown({
        type: TYPE_PREFERENCES,
        header: 'Dropdown'
    })(class='dr-alt')

    include ../../components/enter-card/enter-card
    + enter-card(class='ent-alt')

    include ../../components/exp-checkbox-list/exp-checkbox-list
    + exp-checkbox-list({
        header: 'Expandable checkbox list',
        options: [
            {
                text: 'Завтрак',
                name: 'breakfast'
            },
            {
                text: 'Письменный стол',
                name: 'desk'
            },
            {
                text: 'Стул для кормления',
                name: 'feeding-chair'
            },
            {
                text: 'Кроватка',
                name: 'Crib'
            },
            {
                text: 'Телевизор',
                name: 'tv'
            },
            {
                text: 'Шампунь',
                name: 'shampoo'
            },
            {
                text: 'Телевизор',
                name: 'tv2'
            },
            {
                text: 'Шампунь',
                name: 'shampoo2'
            }
        ]
    })(class='exp-alt')
    p fghjklfghjklfghjklfg hjklfghj k lfghjklfghjklfg

    include ../../components/filter-date-dropdown/filter-date-dropdown
    + filter-date-dropdown({
        header: 'Filter Date Dropdown'
    })

    include ../../components/footer/footer
    + footer(class='foo-alt')

    include ../../components/header/header
    + header({
        authorized: true,
        username: 'Cosmin Negoita'
    })(class='header-alt')
    + header({
        authorized: false
    })

    include ../../components/like-button/like-button
    + like-button({
        liked: false,
        number: '2',
        name: 'denis-likes'
    })(class='comment-item__like')
    + like-button({
        liked: true,
        number: '12',
        name: 'angela-likes'
    })(class='comment-item__like')

    include ../../components/logo/logo
    + logo(class='header__logo')

    include ../../components/masked-text-field/masked-text-field
    + masked-text-field({
        header: 'Masked text field',
        maskType: TYPE_DATE,
        required: true,
        name: 'birth-date'
    })(class='masked-alt')
    + masked-text-field({
        header: 'Masked text field',
        maskType: TYPE_PHONE,
        required: true,
        name: 'phone'
    })

    include ../../components/pagination/pagination
    + pagination({
        active: 14,
        max: 15,
        variantsOnPage: 12,
        allVariants: 174
    })(class='pag-alt')

    include ../../components/point/point
    + point({
        icon: 'tag_faces',
        header: 'Комфорт',
        text: 'Шумопоглощающие стены'
    })(class='point-alt')
    + point({
        icon: 'location_city',
        header: 'Удобство',
        text: 'Окно в каждой из спален'
    })

    include ../../components/radio/radio
    + radio({
        text: 'Мужчина',
        value: 'man',
        name: 'gender'
    })(class='radio-alt')
    + radio({
        text: 'Женщина',
        value: 'woman',
        name: 'gender'
    })

    include ../../components/range-slider/range-slider
    + range-slider({
        header: 'Range slider',
        min: 0,
        max: 15700,
        firstValue: 5000,
        lastValue: 10000,
        step: 1
    })(class='range-alt')

    include ../../components/rate-button/rate-button
    + rate-button({
        rating: 0,
        name: 'his-rate',
        changeable: 'true'
    })(class='rate-alt')
    + rate-button({
        rating: 4,
        name: 'my-rate',
        changeable: 'false',
        numberOfStars: 5
    })

    include ../../components/register-card/register-card
    + register-card(class='reg-alt')

    include ../../components/rich-checkbox/rich-checkbox
    + rich-checkbox({
        name: 'wide-corridor',
        header: 'Широкий коридор',
        text: 'Ширина коридоров в номере не менее 91 см.'
    })(class='rich-alt')

    include ../../components/rich-checkbox-list/rich-checkbox-list
    + rich-checkbox-list({
        header: 'Rich checkbox buttons',
        options: [
            {
                name: 'wide-corridor',
                header: 'Широкий коридор',
                text: 'Ширина коридоров в номере не менее 91 см.'
            },
            {
                name: 'assistant-for-disabled',
                header: 'Помощник для инвалидов',
                text: 'На 1 этаже вас встретит специалист и проводит до номера'
            }
        ]
    })(class='rich-list-alt')

    include ../../components/room-card/room-card
    + room-card({
        photos: [
            {
                src: '../../img/room-1-1.jpg',
                altText: 'bedroom'
            },
            {
                src: '../../img/room-1-2.jpg',
                altText: 'bedroom'
            },
            {
                src: '../../img/room-1-3.jpg',
                altText: 'bedroom'
            },
            {
                src: '../../img/room-1-4.jpg',
                altText: 'bedroom'
            }
        ],
        roomNumber: 888,
        category: LUXE,
        price: 9990,
        rating: 5,
        reviewsNumber: 145
    })(class='room-alt')
    + room-card({
        photos: [
            '../../img/room-1-1.jpg',
            '../../img/room-1-2.jpg',
            '../../img/room-1-3.jpg',
            '../../img/room-1-4.jpg'
        ],
        roomNumber: 840,
        price: 9900,
        rating: 4,
        reviewsNumber: 65
    })

    include ../../components/room-search-card/room-search-card
    + room-search-card(class='search-alt')

    include ../../components/socials/socials
    + socials(class='soc-alt')

    include ../../components/subscription-text-field/subscription-text-field
    + subscription-text-field({
        required: true,
        name: 'name',
        header: 'Subscription text field'
    })(class='sub-alt')

    include ../../components/text-field/text-field
    + text-field({
        header: 'Text field',
        type: 'email',
        placeholder: 'Email',
        required: true,
        name: 'name',
        maxlength: 15
    })(class='field-alt')

    include ../../components/toggle/toggle
    + toggle({
        text: 'Получать спецпредложения',
        name: 'special-offers-1',
        checked: true
    })
    + toggle({
        text: 'Получать спецпредложения',
        name: 'special-offers-2'
    })

block append scripts
    script(src="js/script.js")